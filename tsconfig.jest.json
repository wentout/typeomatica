{
	"compilerOptions": {
		"module": "commonjs",
		"target": "esnext",
		"strict": true,
		"alwaysStrict": true,

		"declaration": false,
		"diagnostics": true,

		"extendedDiagnostics": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": true,
		"strictFunctionTypes": true,
		"traceResolution": false,
		"types": [ "jest", "node" ]
	},
	"include": [
		"./test/**/*.ts"
	],
	"exclude": [
		"./lib/**/*",
		"./coverage/**/*"
	]
}
